<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#ffffff">
    <LinearLayout android:layout_width="match_parent"  android:layout_height="match_parent" android:background="#ffffff" android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"  android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="写文章"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </RelativeLayout>
            <RadioButton
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:button="@null"
                style="@null"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="取消"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"/>
            <RadioButton
                android:id="@+id/send_button"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_width="65dp"
                android:button="@null"
                style="@null"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:text="发表"
                android:backgroundTint="#901E90FF"
                android:background="@drawable/shape_big_login_btn"
                android:layout_marginRight="10dp"
                android:layout_height="30dp"/>
        </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="7dp" android:background="#f5f5f4"/>
        <EditText
            android:id="@+id/title_edittext"
            android:layout_width="match_parent"
            android:gravity="top|left"
            android:hint="请输入标题"
            android:textColor="@color/black"
            android:textColorHint="#CCCCCC"
            android:layout_height="50dp"/>
        <View android:layout_width="match_parent" android:layout_height="7dp" android:background="#f5f5f4"/>

        <EditText
            android:id="@+id/content_edittext"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:hint="请输入内容"
            android:textColorHint="#CCCCCC" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bg6"
            />
        <View android:layout_width="match_parent" android:layout_height="7dp" android:background="#ffffff"/>

        <View android:layout_width="match_parent" android:layout_height="7dp" android:background="#f5f5f4"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RelativeLayout android:id="@+id/rl_collect" android:layout_width="match_parent" android:layout_height="78dp" android:paddingLeft="30dp" android:paddingRight="30dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="10dp" android:text="更多设置" android:textColor="#404040" android:textSize="16sp"/>


                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:src="@mipmap/icon_left_arrow"/>

            </RelativeLayout>
            <RelativeLayout android:id="@+id/fatie1" android:layout_width="match_parent" android:layout_height="78dp" android:paddingLeft="30dp" android:paddingRight="30dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="10dp" android:text="权限设置" android:textColor="#404040" android:textSize="16sp"/>

                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:src="@mipmap/icon_left_arrow"/>

            </RelativeLayout>

            <View android:layout_width="match_parent" android:layout_height="match_parent" android:background="#f5f5f4"/>
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>